<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- AppBar dengan Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tvToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Lapangan"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <!-- Konten utama dalam ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center_horizontal">

            <!-- TextView Nama Lapangan -->
            <TextView
                android:id="@+id/tvNamaLapangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Lapangan"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <!-- TextView Harga -->
            <TextView
                android:id="@+id/tvHarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <!-- TextView Lokasi -->
            <TextView
                android:id="@+id/tvLokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- EditText untuk Nama -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/inputNama"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Masukkan Nama"
                android:inputType="textPersonName"
                android:layout_marginBottom="16dp" />

            <!-- EditText untuk Nomor Telepon -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Telepon"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/inputTelepon"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Masukkan Nomor Telepon"
                android:inputType="phone"
                android:layout_marginBottom="16dp" />

            <!-- DatePicker untuk Tanggal -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Booking"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/InputDate"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="dd/MM/yyyy"
                android:layout_marginBottom="16dp" />

            <!-- GridView 15 kotak (5x3) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grid View (5x3)"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <GridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:horizontalSpacing="8dp"
                android:numColumns="5"
                android:stretchMode="columnWidth"
                android:verticalSpacing="8dp" />

            <!-- Button Bayar Booking -->
            <Button
                android:id="@+id/btnBayarBooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bayar Booking"
                android:backgroundTint="@color/primary"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
