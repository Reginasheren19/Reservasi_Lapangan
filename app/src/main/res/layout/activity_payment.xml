<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- AppBar dengan Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/primary"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/backButtonbook"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_gravity="start|top"
            android:layout_marginStart="18dp"
            android:layout_marginTop="25dp"
            android:contentDescription="Kembali"
            android:src="@drawable/backwhite" />

        <TextView
            android:id="@+id/tvToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Payment Lapangan"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Identitas Customer -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:elevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/identityDetailsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Identitas Customer"
                android:textSize="17sp"
                android:textStyle="bold"
                android:paddingStart="16dp" />

            <TextView
                android:id="@+id/customerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Nama Pemesan:"
                android:textSize="15sp"
                android:textColor="#000000"
                android:paddingStart="16dp" />

            <TextView
                android:id="@+id/customerPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="No. Telepon: 081234567890"
                android:textSize="15sp"
                android:textColor="#000000"
                android:paddingStart="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Booking Information -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:elevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/fieldDetailsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking Information"
                android:textSize="17sp"
                android:textStyle="bold"
                android:paddingStart="16dp" />

            <TextView
                android:id="@+id/bookingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Tanggal Booking:"
                android:textSize="15sp"
                android:textColor="#000000"
                android:paddingStart="16dp" />

            <TextView
                android:id="@+id/bookingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Jam Booking:"
                android:textSize="15sp"
                android:textColor="#000000"
                android:paddingStart="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Total Harga -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:elevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/totalHargaLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Harga"
                android:textSize="17sp"
                android:textStyle="bold"
                android:paddingStart="16dp" />

            <TextView
                android:id="@+id/tvTotalHarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Rp 500.000"
                android:textColor="#FF0000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingStart="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Virtual Account -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:elevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/virtualAccountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Virtual Account"
                android:textSize="17sp"
                android:textStyle="bold"
                android:paddingStart="16dp" />

            <TextView
                android:id="@+id/virtualAccountField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="1234567890"
                android:textSize="20sp"
                android:textColor="#000000"
                android:paddingStart="16dp" />

            <TextView
                android:id="@+id/virtualAccountExpiration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Kadaluarsa dalam 2 jam."
                android:textSize="14sp"
                android:textColor="#FF0000"
                android:paddingStart="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Kembali ke Halaman Awal Button (RelativeLayout) -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/backToHomeButton"
            android:layout_width="300dp"
            android:layout_height="51dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/primary"
            android:text="Kembali"
            android:layout_alignParentBottom="true"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</LinearLayout>
